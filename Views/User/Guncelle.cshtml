@model BACommerce.Models.User
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<html>

<body>
    <div class="container">
        <div class="row" style="margin-top:50px;">
            <div class="col-lg-6 col-lg-offset-3 panel panel-default">
                <div class="panel-body">
                    @if (ViewBag.bilgi == true)
                    {
                        <div class="alert alert-success">Güncelleme İşlemi Başarılı.</div>
                    }
                    else if (ViewBag.bilgi == false)
                    {
                        <div class="alert alert-danger">Güncelleme İşlemi Başarısız.Lütfen Girilen Bilgileri kontrol Ediniz.</div>
                    }

                    @using (Html.BeginForm("Guncelle", "User", FormMethod.Post))
                    {
                        @Html.HiddenFor(x => x.UserID)
                        <table class="table table-responsive">
                            <thead>
                                <tr>
                                    <th colspan="2" class="text-center">Kullanıcı Güncelle</th>
                                </tr>
                            </thead>
                            <tr>

                                <td>Kullanıcı Nick Name(**)</td>
                                <td>@Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })</td>
                                <td>@Html.ValidationMessageFor(x => x.UserName)</td>
                            </tr>
                            <tr>
                                <td>Kullanıcı İsim(**)</td>
                                <td>@Html.TextBoxFor(Model => Model.FirstName, new { @class = "form-control" })</td>
                                <td>@Html.ValidationMessageFor(x => x.FirstName)</td>
                            </tr>
                            <tr>
                                <td>Kullanıcı Soy İsim(**)</td>
                                <td>@Html.TextBoxFor(Model => Model.LastName, new { @class = "form-control" })</td>
                                <td>@Html.ValidationMessageFor(x => x.LastName)</td>
                            </tr>
                            <tr>
                                <td>Kullanıcı Şifre(**)</td>
                                <td>@Html.TextBoxFor(Model => Model.Password, new { @class = "form-control" })</td>
                                <td>@Html.ValidationMessageFor(x => x.Password)</td>
                            </tr>
                            <tr>
                                <td>E-mail Adresi(**)</td>
                                <td>@Html.TextBoxFor(Model => Model.Email, new { @class = "form-control" })</td>
                                <td>@Html.ValidationMessageFor(x => x.Email)</td>
                            </tr>
                            <tr>
                                <td>Telefon(*)</td>
                                <td>@Html.TextBoxFor(Model => Model.Phone, new { @class = "form-control" })</td>
                              
                            </tr>
                            <tr>
                                <td>Kullanıcı Doğum Tarihi(*)</td>
                                <td>@Html.TextBoxFor(Model => Model.DGunu, new { @class = "form-control" })
                                @Html.TextBoxFor(Model => Model.DAyi, new { @class = "form-control" })
                                @Html.TextBoxFor(Model => Model.DYili, new { @class = "form-control" })</td>
                            </tr>
                            <tr>
                                <td></td>
                                <td>
                                    <input type="submit" value="GÜNCELLE" class="btn btn-success btn-block" />
                                </td>
                            </tr>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
    <style>
        .field-validation-error {
            color: red;
        }
    </style>
    <div class="control-group">
        <div class="controls">

            <label style="color:red;font-size:20px;">(**) olan yerler boş geçilemeyen (*) olan yerler boş geçilebilir alanlardır..</label>


        </div>
    </div>
</body>
</html>