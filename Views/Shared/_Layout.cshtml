
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>BACommerce</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link id="callCss" rel="stylesheet" href="~/Content/css/bootstrap.min.css" media="screen" />
    <link href="~/Content/css/base.css" rel="stylesheet" media="screen" />
    <link href="~/Content/css/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome-ie7.css" rel="stylesheet" />
    <link href="~/Content/css/prettify.css" rel="stylesheet" />



    <link rel="shortcut icon" href="~/img/ico/favicon.ico">

    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/img/ico/apple-touch-icon-144-precomposed.png">

    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/img/ico/apple-touch-icon-114-precomposed.png">

    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/img/ico/apple-touch-icon-72-precomposed.png">

    <link rel="apple-touch-icon-precomposed" href="~/img/ico/apple-touch-icon-57-precomposed.png">

    <style type="text/css" id="enject"></style>
</head>
<body>
    <div id="header">
        <div class="container">
            <div id="welcomeLine" class="row">

                <div class="span6">
                    <div class="pull-right">


                    </div>
                </div>
            </div>

            <div id="logoArea" class="navbar">
                <a id="smallScreen" data-target="#topMenu" data-toggle="collapse" class="btn btn-navbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <div class="navbar-inner">
                    <a class="brand" href="^#"><img src="~/img/mertkitaplogo2.png" alt="Mert Kitap" /></a>        <!--Logo kısmı-->

                    <ul id="topMenu" class="nav pull-right">


                        <li class="">

                            <div class="container" style="padding-top:20px; float:right;            text-align:center">
                                @if (ViewBag.CurrentUser != null)
                                {
                                    <label style="font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;color:greenyellow">Hosgeldiniz Sayın @ViewBag.CurrentUser</label>

                                    <button class="btn btn-danger" style="text-align:center" type="button" onclick="location.href='@Url.Action("LogOut", "Account")'">Çıkış</button>





                                }
                                else
                                {
                                    <button class="btn btn-success" style="text-align:center" type="button" onclick="location.href='@Url.Action("Kayit", "Register")'">Kayıt</button>
                                    <button class="btn btn-primary" style="text-align:center;" type="button" onclick="location.href='@Url.Action("Login", "Account")'">Giriş</button>


                                }
                            </div>


                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="mainBody">
        <div class="container">
            <div class="row">

                <div id="sidebar" class="span3">


                    <div class="well well-small"><a id="myCart" href="@Url.Action("SepeteGit", "Cart")"><img src="~/img/ico-cart.png" alt="cart">Sepetteki Ürünleri Gör </a></div>



                    <ul id="sideManu" class="nav nav-tabs nav-stacked">

                        <li class="subMenu">

                            <ul style="display:normal">

                                <li class=""><a href="@Url.Action("Index", "Home")"><h3>Anasayfa</h3></a></li>
                                <li class=""><a href="@Url.Action("Hakkimizda", "Home")"><h3>Hakkımızda</h3></a></li>
                                <li class=""><a href="@Url.Action("İletisim", "Home")"><h3>İletişim</h3></a></li>

                            </ul>
                        </li>

                    </ul>
                    <br />

                    <br />
                    
                  <br />
                    <br />
                    <div class="thumbnail">
                        <img src="~/img/products/k3.jpg" alt="Gözde Ürünümüz" />
                        <div class="caption">

                        </div>
                    </div><br />
                    <br />

                    <div class="thumbnail">
                        <img src="~/img/payment_methods.png" title="Bootshop Payment Methods" alt="Payments Methods">

                        <div class="caption">

                        </div>
                    </div>
                </div>

                <div class="span9">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <div id="footerSection">
        <div class="container">
            <div class="row">



                <div id="socialMedia" class="span3 media-middle">
                    <h5>Sosyal Medya </h5>
                    <a href="#"><img width="100" height="100" src="~/img/facebook.png" title="facebook" alt="facebook" /></a>
                    <a href="#"><img width="100" height="100" src="~/img/twitter.png" title="twitter" alt="twitter" /></a>
                    <a href="#"><img width="100" height="100" src="~/img/youtube.png" title="youtube" alt="youtube" /></a>
                </div>
            </div>
            <p class="pull-right">&copy; BACommerce</p>
        </div>
    </div>
    <script src="~/scripts/js/jquery.js" type="text/javascript"></script>
    <script src="~/scripts/js/bootstrap.min.js" type="text/javascript"></script>

    <script src="~/scripts/js/prettify.js"></script>

    <script src="~/scripts/js/bootshop.js"></script>
    <script src="~/scripts/js/jquery.lightbox-0.5.js"></script>

</body>
</html>