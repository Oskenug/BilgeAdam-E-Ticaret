@model BACommerce.Models.Product
@{
    ViewBag.Title = "ProductDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div id="gallery" class="span3">
        
            <img src="~/img/products/@Model.ImagePath" style="width:100%" alt="" />
     
   
    </div>

    <div class="span6">
        <h3>@Model.ProductName  </h3>
       
        <hr class="soft" />
        <form class="form-horizontal qtyFrm">
            <div class="control-group">
              
                <h4><span>Fiyat     :</span>@Model.UnitPrice</h4>
                <h4><span>Stok Miktarı   : </span>@Model.UnitInStock</h4>
                <h4><span>Kategorisi   : </span>@Model.Category.CategoryName</h4>
                
                <p>
                    @Model.Description

                </p>
                 <div class="controls">
                     
                     <a class="btn btn-primary square-btn-adjust" href="@Url.Action("Index","Home")">Anasayfaya yönlendir<i class=""></i></a>
                   
                </div>
            </div>
        </form>

        <hr class="soft" />
       
        <hr class="soft clr" />
       
        <br class="clr" />
        <a href="#" name="detail"></a>
        <hr class="soft" />
    </div> 

</div>
