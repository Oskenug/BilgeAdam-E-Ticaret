@model List<BACommerce.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<body>
    <div class="container">
        <div class="col-lg-12 panel panel-default" style="margin-top:50px;">
            <table class="table table-responsive table-striped">
                <thead>
                    <tr>
                        <th style="width:5%">ID</th>
                        <th style="width:20%">Adı</th>
                        <th style="width:20%">Kategori Adı</th>      
                        <th style="width:5%">Stok Miktarı</th>
                        <th style="width:10%">Fiyatı</th>
                        <th style="width:20%">İşlemler</th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (BACommerce.Models.Product item in Model)
                    {
                        <tr>
                            <td>@item.ProductID</td>
                            <td>@item.ProductName</td>
                            <td>@item.Category.CategoryName</td>       
                            <td>@item.UnitInStock</td>
                            <td>@item.UnitPrice</td>
                            <td>
                                <div class="btn-group btn-group-justified">
                                    
                                    <a href='~/Product/Guncelle/@item.ProductID' class="btn btn-warning">Güncelle</a>
                                    <a href='~/Product/Sil/@item.ProductID' class="btn btn-danger">Sil</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</body>

