@model BACommerce.Models.User
@{
    ViewBag.Title = "Kayit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="span9">

    <div class="well">

        @using (Html.BeginForm("Kayit", "Register", FormMethod.Post))
        {   <form class="form-horizontal">
            <h4>Kişisel Bilgileriniz.</h4>
            <div class="control-group">

                <div class="controls">
                    @Html.TextBoxFor(x => x.UserName, new { type = "text", placeholder = "Kullanıcı Adı                           (**)" })
                    @Html.ValidationMessageFor(x => x.UserName)
                </div>
            </div>
            <div class="control-group">

                <div class="controls">
                    @Html.TextBoxFor(x => x.Email, new { type = "text", placeholder = "E-posta Adı                             (**)" })
                    @Html.ValidationMessageFor(x => x.Email)
                </div>
            </div>
            <div class="control-group">

                <div class="controls">
                    @Html.TextBoxFor(x => x.FirstName, new { type = "text", placeholder = "İsim                                         (**)" })
                    @Html.ValidationMessageFor(x => x.FirstName)
                </div>
            </div>
            <div class="control-group">

                <div class="controls">
                    @Html.TextBoxFor(x => x.LastName, new { type = "text", placeholder = "Soy İsim                                  (**)" })
                    @Html.ValidationMessageFor(x => x.LastName)
                </div>
            </div>
            <div class="control-group">

                <div class="controls">
                    @Html.TextBoxFor(x => x.Phone, new { type = "text", placeholder = "Telefon                                     (*)" })
                </div>
            </div>
            <div class="control-group">

                <div class="controls">

                    @Html.PasswordFor(x => x.Password, new { type = "password", placeholder = "Şifre                                       (**)" })
                    @Html.ValidationMessageFor(x => x.Password)

                </div>
            </div>
            <div class="control-group">

                <div class="controls">

                    @Html.TextBoxFor(x => x.DGunu, new { @class = "dogumtarihi", type = "", placeholder = "Gün                                       (*)" })
                    @Html.TextBoxFor(x => x.DAyi, new { @class = "dogumtarihi", type = "", placeholder = "Ay                                         (*)" })
                    @Html.TextBoxFor(x => x.DYili, new { @class = "dogumtarihi", type = "", placeholder = "Yıl                                       (*)" })

                </div>
            </div>
            <div class="control-group">
                <div class="controls">

                    <label style="color:red;font-size:20px;">(**) olan yerler boş geçilemeyen (*) olan yerler boş geçilebilir alanlardır..</label>


                </div>


            </div>

            <input type="submit" id="kaydet-buton" value="Kaydet" class="btn btn-success text-center" />


        </form>
        }
    </div>
    @if (ViewBag.Bilgi != null)
    {
        <div>
            @ViewBag.Bilgi
        </div>
    }

</div>

<style>
    .field-validation-error {
        color: red;
    }
</style>
